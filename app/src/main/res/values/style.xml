<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCorner">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Widget.App.MaterialButtonToggleGroup" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">56dp</item> <!-- Adjust this value to match your TextInputLayout height -->
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Pill" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textColor">#406096</item>
        <item name="iconTint">#406096</item>
        <item name="strokeColor">#406096</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="colorControlActivated">#406096</item>
    </style>

</resources>