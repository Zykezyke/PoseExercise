<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtnPass"
                android:layout_width="34dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/txtChangePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antonio"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="?android:titleTextAppearance"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCurrentPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_condensed"
            android:text="Current password"
            android:textAlignment="center"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/currentPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15dp"
                android:padding="12dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivToggleCurrentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle Current Password Visibility"
                android:padding="10dp"
                android:src="@drawable/ic_visible_off" />
        </RelativeLayout>


        <TextView
            android:id="@+id/txtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_condensed"
            android:text="New password"
            android:textAlignment="center"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/newPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:maxLength="12"
                android:padding="12dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivToggleNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle New Password Visibility"
                android:padding="10dp"
                android:src="@drawable/ic_visible_off" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_condensed"
            android:text="Confirm password"
            android:textAlignment="center"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/confirmPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:maxLength="12"
                android:padding="12dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivToggleConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle Confirm Password Visibility"
                android:padding="10dp"
                android:src="@drawable/ic_visible_off" />
        </RelativeLayout>

        <Button
            android:id="@+id/saveBtnPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#3C628F"
            android:fontFamily="@font/roboto_condensed"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>